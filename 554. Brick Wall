class Solution(object):
    def leastBricks(self, wall):
        """
        :type wall: List[List[int]]
        :rtype: int
        """
        lst = []
        dic = {}
        for line in wall:
            curr = 0
            for i in range(len(line) - 1):
                curr += line[i]
                if curr in dic:
                    dic[curr] += 1
                else:
                    dic[curr] = 1
        
        cnt = 0
        for val in dic.values():
            cnt = max(cnt, val)
            
        return len(wall) - cnt
