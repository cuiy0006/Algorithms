class Solution:
    def countSubstrings(self, s):
        """
        :type s: str
        :rtype: int
        """
        def helper(left, right, cnt, s):
            while left >= 0 and right < len(s) and s[left] == s[right]:
                cnt[0] += 1
                left -= 1
                right += 1
        
        cnt = [0]
        for i in range(len(s)):
            helper(i, i, cnt, s)
            helper(i, i+1, cnt, s)
        
        return cnt[0]
