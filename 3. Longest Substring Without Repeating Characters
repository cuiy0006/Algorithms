class Solution(object):
    def lengthOfLongestSubstring(self, s):
        """
        :type s: str
        :rtype: int
        """
        dic = {}
        cnt = 0
        maxval = 0
        j = 0
        for i, c in enumerate(s):
            if c not in dic:
                dic[c] = i
                cnt += 1
                maxval = max(maxval, cnt)
            else:
                idx = dic[c]
                for k in range(j, idx):
                    del dic[s[k]]
                cnt -= dic[c] - j
                j = idx + 1
                dic[c] = i
                
                
        return maxval
