class Solution(object):
    def lengthOfLongestSubstring(self, s):
        """
        :type s: str
        :rtype: int
        """
        hashset = set()
        i = 0
        max_len = 0
        curr_len = 0
        for j, c in enumerate(s):
            if c not in hashset:
                hashset.add(c)
                curr_len += 1
                max_len = max(max_len, curr_len)
            else:
                while s[i] != c:
                    hashset.remove(s[i])
                    i += 1
                    curr_len -= 1
                i += 1
        return max_len
