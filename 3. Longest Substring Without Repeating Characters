class Solution(object):
    def lengthOfLongestSubstring(self, s):
        """
        :type s: str
        :rtype: int
        """
        dic = set()
        max_len = 0
        begin = 0
        for i, c in enumerate(s):
            if c not in dic:
                dic.add(c)
                max_len = max(max_len, len(dic))
            else:
                for j in range(begin, i):
                    if s[j] != c:
                        dic.remove(s[j])
                    else:
                        begin = j + 1
                        break
        return max_len
