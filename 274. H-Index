class Solution:
    def hIndex(self, citations):
        """
        :type citations: List[int]
        :rtype: int
        """
        citations.sort()
        h = len(citations)
        cnt = 0
        i = len(citations) - 1
        while i >= 0:
            while i >= 0 and citations[i] >= h:
                i -= 1
                cnt += 1
                if cnt == h:
                    return h
            h -= 1
            if cnt == h:
                return h
        return h
