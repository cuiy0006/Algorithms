class Solution(object):
    def search(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: int
        """
        left = 0
        right = len(nums)
        while left < right:
            mid = (left + right)//2
            if nums[mid] == target:
                return mid
            elif nums[mid] > target:
                if nums[mid] >= nums[0] and target <= nums[-1] and nums[0] > nums[-1]:
                    left = mid + 1
                else:
                    right = mid
            else:
                if target >= nums[0] and nums[mid] <= nums[-1] and nums[0] > nums[-1]:
                    right = mid
                else:
                    left = mid + 1
        return -1
