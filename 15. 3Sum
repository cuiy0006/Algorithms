class Solution(object):
    def threeSum(self, nums):
        res = []
        lst = sorted(nums)
        for i in range(len(lst)):
            if i >0 and lst[i] == lst[i-1]:
                continue
            m = i+1
            n = len(lst)-1
            while m < n:
                if lst[i] + lst[m] + lst[n] == 0:
                    res.append([lst[i], lst[m], lst[n]])
                    m += 1
                    n -= 1
                    while m < n and lst[m] == lst[m-1]:
                        m += 1
                    while m < n and lst[n] == lst[n+1]:
                        n -= 1
                elif lst[i] + lst[m] + lst[n] < 0:
                    m += 1
                else:
                    n -= 1
        return res
