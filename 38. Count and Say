class Solution:
    def countAndSay(self, n):
        """
        :type n: int
        :rtype: str
        """
        s = '1'
        i = 1
        while i < n:
            new = ''
            curr = s[0]
            cnt = 1
            for j in range(1, len(s)):
                if s[j] == curr:
                    cnt += 1
                else:
                    new += str(cnt) + curr
                    curr = s[j]
                    cnt = 1
            new += str(cnt) + curr
            s = new
            i += 1
        return s
